*
{
	margin:0;
	padding:0;
	box-izing:boder-box;
	background-color:black;
}

.main
{
	width:40%;
	padding:5px;
	margin:50px auto;
	display:grid;
	color:white;
	background-color:white;
	grid-template-columns:repeat(3,1fr);
	grid-gap:5px;
}
.header
{
	background-color:#70ad47;
	grid-column:1/4;
	height:100px;
}
.nav
{
	background-color:#ed7d31;
	grid-column:1/-1;
	height:25px;
}
.left
{
	background-color:#4672c4;
	grid-column:1/1;
	height:150px;
}
.right
{
	background-color:#5b9bd5;
	grid-column:2/4;
	height:150px;
}
.footer
{
	background-color:#41719c;
	grid-column:1/4;
	height:100px;
}
.main > div
{
text-align:center;
padding-top:25px;
}